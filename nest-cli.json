{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "assets": [
            "assets/*",
            {
                "include": "../mailing/templates/*.hbs",
                "outDir": "dist/mailing",
                "watchAssets": true
            },
            {
                "include": "../assets/**",
                "outDir": "dist/assets",
                "watchAssets": true
            },
            {
                "include": "../assets/**",
                "outDir": "dist/assets",
                "watchAssets": true
            }
        ],
        "watchAssets": true,
        "deleteOutDir": true
    }
}